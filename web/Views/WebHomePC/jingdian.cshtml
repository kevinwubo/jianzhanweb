<div class="body" style="margin-top:.25rem">

    <img src="/source/static//images/pc/qixin.png" style="height:1.2rem" alt="">

    <div class="flex-row jz-body">
        <div class="right flex-col">

            <div class="flex-row" style="padding:.2rem 0 0rem;background: #fff;">
                <div class="px18" style="font-family:SourceHanSansCN-Bold; font-weight:bold;"><span style="color:#B32735">釉色</span>·赏析</div>
                <div class="flex-col"></div>
                <div class="px14 color_73">MORE 》</div>
            </div>
            <img src="/source/static//images/pc/6_top_line.png" alt="">

            <div class="ds-list">
                @if (listYS != null && listYS.Count > 0)
                {
                    foreach (ArtisanEntity entity in listYS)
                    {
                        <a href="/WebHomePC/jingdiandetail?artisanid=@entity.artisanID" target="_blank" class="qxys-item flex-row">
                            <img style="margin-right:0" src="@entity.IDHead" alt="">
                            <div class="flex-col">
                                <div class="t1 flex-row clamp1" style="align-items:center">
                                    【@entity.artisanName】<span style="color:#b2b2b2;font-size: .13rem">
                                        |
                                        @entity.artisanType
                                    </span>
                                </div>
                                <div class="t2 clamp1">
                   
                                </div>
                                <div class="t4 clamp3">
                                    @(entity.introduction.Length > 35 ? entity.introduction.Substring(0, 34) : entity.introduction)...
                                </div>
                                <div class="t3">【查看详情】</div>
                            </div>
                        </a>

                    }
                }
            </div>
            <div class="div-h-2"></div>
            <div class="flex-row" style="padding:.2rem 0 0rem;background: #fff;">
                <div class="px18" style="font-family:SourceHanSansCN-Bold;
                                                        font-weight:bold;"><span style="color:#B32735">器型</span>·赏析</div>
                <div class="flex-col"></div>
                <div class="px14 color_73">MORE 》</div>
            </div>
            <img src="/source/static//images/pc/6_top_line.png" alt="">

            <div class="ds-list">
@if (listQX != null && listQX.Count > 0)
{
    foreach (ArtisanEntity entity in listQX)
    {
        <a href="/WebHomePC/jingdiandetail?artisanid=@entity.artisanID" target="_blank"  class="qxys-item qxys-item-qx flex-row">
            <img style="margin-right:0" src="@entity.IDHead" alt="">
            <div class="flex-col">
                <div class="t1 flex-row clamp1" style="align-items:center">
                    【@entity.artisanName】<span style="color:#b2b2b2;font-size: .13rem">
                        |
                        @entity.artisanType
                    </span>
                </div>
                <div class="t2 clamp1">
                   
                </div>
                <div class="t4 clamp3">
                    @(entity.introduction.Length > 35 ? entity.introduction.Substring(0, 34) : entity.introduction)...
                </div>
                <div class="t3">【查看详情】</div>
            </div>
        </a>
    }
}
            </div>


            <div class="div-h-4"></div>
            <!-- 热门建盏 -->
            <div class="flex-row" style="padding:.2rem 0 .1rem;background: #fff;border-bottom: 1px #b3b3b3 solid">
                <div style="font-size: .21rem;font-family:SourceHanSansCN-Bold;
                                        font-weight:bold;">热门建盏</div>
                <div class="flex-col"></div>
                <div class="px14 color_73">MORE 》</div>
            </div>
            <div style="height:2px;background:#333;"></div>
            <div class="div-h-1"></div>
            <div class="cell-list">
                @if (listPro != null && listPro.Count > 0)
                {
                    foreach (ProductEntity entity in listPro)
                    {
                <a class="li">
                    <div class="div-h-2"></div>
                    <div class="px16 color_7 texta-c actcolor">NO:@entity.ProductID</div>
                    <img src="@entity.Images" alt="" style="cursor:pointer" onclick="OpenUrl('/@(entity.ProductID).html')">
                    <div class="div-h-1"></div>
                    <div class="px16 color_7 texta-c">@entity.ProductName</div>
                    <div class="div-h-1"></div>
                    <div class="px13 color_7 flex-row" style="margin:0 15px">
                                <div class="flex-col texta-l clamp1">
                            器形:@entity.Type3
                        </div>
                         <div class="flex-col texta-l clamp1">
                            釉色:@entity.Type2
                        </div>
                    </div>
                    <div class="div-h-1"></div>
                   <div class="px13 color_7 flex-row" style="margin:0 15px">
                                <div class="flex-col texta-l clamp1">
                            口径:@entity.Volume
                        </div>
                        <div class="flex-col texta-l clamp1">
                            作者:@entity.Author
                        </div>
                    </div>
                    <div class="div-h-2"></div>
                    <div class="zxbt-big" onclick="javascript:showzx('@entity.ProductID','@entity.ProductName','@entity.Type3','@entity.Type2')">点击咨询</div>
                </a>
                         
                    } 
                }
            </div>
            <!-- 留言评论 -->
            <div class="flex-row" style="border: 1px #bbb solid;background:#fff;height: 4rem;padding: .35rem .66rem;align-items: center">
                <div style="width:4.7rem">
                    <img src="/source/static/images/pc/5_pl.png" alt="">
                    <div class="div-h-3"></div>

                    <div class="flex-row" style="align-items: center">
                        <div class="px14">您的称呼：</div>
                        <input style="padding: 0 .1rem;border:#ddd 1px solid;height: .28rem;width: 1rem;" type="text" placeholder="请输入您的称呼">
                        <div class="input_radio" style="margin-left:.2rem">
                            <input type="radio" name="item" value="先生">
                            <label>先生</label>
                        </div>
                        <div class="input_radio" style="margin-left:.2rem">
                            <input type="radio" name="item" value="女士">
                            <label>女士</label>
                        </div>
                    </div>
                    <div class="div-h-2"></div>
                    <div class="flex-row" style="align-items: center">
                        <div class="px14">联系电话：</div>
                        <input style="padding: 0 .1rem;border:#ddd 1px solid;height: .28rem;width: 1rem;" type="text" id="txt_telephone" placeholder="请输入您的联系电话">
                        <div style="width:.2rem"></div>
                        <div class="px14">微信：</div>
                        <input style="padding: 0 .1rem;border:#ddd 1px solid;height: .28rem;width: 1rem;" type="text" id="txt_ContactName" placeholder="请输入您的微信">
                    </div>
                    <div class="div-h-2"></div>
                    <div class="flex-row">
                        <div class="px14">完善内容：</div>
                        <textarea class="flex-col" style="height:1rem;padding: 0 .1rem;border:#ddd 1px solid;width: 1rem;" id="txt_Content" type="text" placeholder="请输入您的内容">                        </textarea>
                        <div style="width:.92rem"></div>
                    </div>
                    <div class="div-h-2"></div>
                    <div id="LJTJ_ZiXun" style="margin-left: .7rem;width:1.9rem;height:.4rem;background: #B32735;color:#fff;line-height: .4rem;text-align: center;border-radius: 3px;margin-right: .3rem" class="px14">立即提交</div>

                </div>
                <img src="/source/static/images/pc/ly_shu.png" alt="">

                <div style="margin-left: .4rem">
                    <div class="px18 texta-c">免费咨询 快速沟通</div>
                    <div class="div-h-1"></div>
                    <div class="texta-c" style="font-size:.22rem;color: #B32735">4008-276-376</div>
                    <div class="div-h-1"></div>
                    <div style="height:1px;background:#ddd;"></div>
                    <img style="height:1.5rem;width:1.5rem" src="/source/static/images/pc/5_code.png" alt="">
                    <div class="px14 texta-c" style="color:#202020;">(扫码看实物视频)</div>
                </div>
            </div>
        </div>
        <div style="width:.45rem"></div>
        <!-- 右边的布局 -->
        <div class="left">
            <div class="flex-row leftdownline">
                <div class="px16" style="font-family:SourceHanSansCN-Bold;
                                    font-weight:bold;"><span style="color:#B32735">建盏</span>推荐</div>
                <div class="flex-col"></div>
                <div class="px14 color_73">MORE 》</div>
            </div>
            @if (listTJ != null && listTJ.Count > 0)
            {
                foreach (ProductEntity entityPro in listTJ)
                {
                    <div class="div-h-2"></div>
                    <div class="ds-item">
                        <a href="/@(entityPro.ProductID).html" target="_blank">
                            <div class="pimg" style="background:url(@entityPro.Images)"></div>
                        </a>
                        <div class="flex-row" style="flex-direction: column">
                            <div class="flex-row mar-t-15" style="align-items: center;padding: 0 .13rem">
                                <div class="flex-col t1 clamp1">【@entityPro.ProductName】</div>
                                <img class="bt-zx" onclick="javascript:showzx('@entityPro.ProductID','@entityPro.ProductName','@entityPro.Type3','@entityPro.Type2')" src="/source/static/images/jianzhan_0509/ds_zx.png">
                            </div>

                            <div class="flex-row pad-t-16" style="padding: 0 .13rem">
                                <div class="t2 clamp1 flex-col">编号：@entityPro.ProductID</div>
                                <div class="t2 clamp1 flex-col">作者：@entityPro.Author</div>
                            </div>

                            <div class="flex-row pad-t-16" style="padding: 0 .13rem">
                                <div class="t2 clamp1 flex-col">器形：@entityPro.Type3</div>
                                <div class="t2 clamp1 flex-col">釉色：@entityPro.Type2</div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="div-h-4"></div>
    <!-- 最新专题 -->
    <div style="text-align: center;">
        <img src="/source/static/images//pc/5_title.png" alt="">
    </div>
    <div class="div-h-4"></div>
    <div class="flex-row">
        <div class="flex-col">
            <a href="/zhuanti.html" target="_blank"><img class="hb_5" src="/source/static/images/jianzhan_0509/zttj1.jpg"></a>
        </div>
        <div style="width:.15rem"></div>
        <div class="flex-col">
            <a href="/zhuanti.html" target="_blank"><img class="hb_5" src="/source/static/images/jianzhan_0509/zttj2.jpg"></a>
        </div>
        <div style="width:.15rem"></div>
        <div class="flex-col">
            <a href="/zhuanti.html" target="_blank"><img class="hb_5" src="/source/static/images/jianzhan_0509/zttj3.jpg"></a>
        </div>
    </div>

</div>