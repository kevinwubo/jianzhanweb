                    <div class="div-h-2"></div>
                    <div class="px16 color_7 texta-c actcolor">NO:@entity.ProductID</div>
                    <img src="@entity.Images" alt="">
                    <div class="div-h-1"></div>
                    <div class="px16 color_7 texta-c">@entity.ProductName</div>
                    <div class="div-h-1"></div>
                    <div class="px13 color_7 flex-row">
                        <div class="flex-col texta-c">
                            器形:@entity.Type3
                        </div>
                        <div class="flex-col texta-c">
                            釉色:@entity.Type2
                        </div>
                    </div>
                    <div class="div-h-1"></div>
                    <div class="px13 color_7 flex-row">
                        <div class="flex-col texta-c">
                            口径:@entity.Volume
                        </div>
                        <div class="flex-col texta-c">
