        $("#btn_zixun").click(function () {
            var Telephone = $("#txt_telephone").val();
            var ProductID = $("#Hid_ProductID").val();
            if (Telephone == "") {
                alert('请输入您的手机号码');
                return false;
            }
            if (Telephone.length != 11) {
                alert('请输入正确的手机号码');
                return false;
            }
            ZiXun(Telephone, ProductID, "", "");
        })

        function ZiXun(Telephone, ProductID, ContactName, WxChartID) {
            $.ajax({
                url: "/WebHome/CreateInquiry",
                type: 'POST',
                async: false,
                data: {
                    telephone: Telephone,
                    productID: ProductID,
                    sourceform: "MB"
                },
                success: function (data) {
                    alert(data);
                    $("#txt_telephone").val("");
                    $("#Hid_ProductID").val("");
                }
            });
        }

        $("#LJTJ_ZiXun").click(function () {
