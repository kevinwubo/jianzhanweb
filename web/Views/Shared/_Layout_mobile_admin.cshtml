    @RenderSection("Header", false)
    <style>
        label.error {
            margin-left: 10px;
            width: auto;
            display: inline;
            color: red;
        }

        .window-mask {
            position: fixed;
            left: 0;
            top: 0;
            z-index: 199;
            width: 100%;
            height: 100%;
            filter: none;
            background-color: rgba(0,0,0,0.3);
        }

        /*图片上传*/
        .upImg {
            width: 80px;
            height: 40px;
            text-align: center;
            line-height: 40px;
            font-size: 12px;
            background: #00a7d0;
            color: #fff;
            cursor: pointer;
            border-radius: 3px;
            position: relative;
        }

            .upImg .upfile {
                width: 80px;
                height: 40px;
                position: absolute;
                overflow: hidden;
                right: 0;
                top: 0;
                opacity: 0;
            }
    </style>
</head>
<body>
    <div id="wrap">
        <input type="hidden" name="ukey" value="@ViewBag.UKey" />
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <div class="nav toggle" style="height: 45px;line-height: 45px;vertical-align: middle;">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        <div class="responsive-logo">
