@using Entity.ViewModel;
@using Common;
@{
    ViewBag.Title = "mn_shop";
    Layout = "~/Views/Shared/_Layout_web.cshtml";
    List<ProductEntity> list = (List<ProductEntity>)ViewBag.souchang;
    PagerInfo p = (PagerInfo)ViewBag.Pager;
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>建盏精品收藏馆 - 建盏天下网</title>
    <meta name="keywords" content="曜变盏,老盏,建盏孤品,建盏精品,建盏收藏" />
    <meta name="description" content="建盏精品收藏馆汇集了一线大师名家直供的第一手精品建盏：获奖建盏、各大博物馆收藏建盏、拍卖精品、孤品建盏、专利建盏，曜变盏，老盏等价格、收藏、名家押窑和私人定制服务。" />
    <meta name="viewport" content="width=device-width,user-scalable=no, initial-scale=1">
    <link rel="stylesheet" href="~/source/static/css/1905_jquery-weui.css" type="text/css">
    <link rel="stylesheet" href="~/source/static/css/1905_base_1_30.css" type="text/css">
    <link rel="stylesheet" href="~/source/static/css/1905_style.css">
    <link rel="stylesheet" href="~/source/static/css/1905_pagination.css" type="text/css">
    <link rel="stylesheet" href="~/source/static/css/style-index.css" type="text/css" />
    <style>
        body {
            background: #fff;
            max-width: 750px;
            margin: auto;
            /*-webkit-overflow-scrolling: touch;*/
        }

        .color_red_c9 {
            color: #c90319;
        }

        .ssbtn {
            width: 1rem;
            background: #c90319;
            color: white;
            height: .56rem;
            line-height: .56rem;
            text-align: center;
            border-radius: 0 3px 3px 0;
        }

        .search {
            background: #f7f7f7;
            height: 0.56rem;
            border-radius: 3px;
        }

        .ssbtnzx {
            width: 2rem;
            background: #c90319;
            color: white;
            height: .7rem;
            line-height: .7rem;
            text-align: center;
            border-radius: 0 3px 3px 0;
        }

        .searchzx {
            background: #f7f7f7;
            height: 0.7rem;
            border-radius: 3px;
        }

        .banner {
            overflow: hidden;
            border-radius: 5px;
            margin: .256rem;
        }

            .banner img {
                width: 100%;
            }

        .part1 {
            background: white;
            padding: 0.256rem;
            border-top: .1rem solid #f7f7f7;
        }

        .list {
            overflow: hidden;
            /*height: 7rem;*/
            position: relative;
        }

            .list .item {
    text-align: center;
    width: 33%;
    float: left;
    height: 4.2rem;
    padding-top: .2rem;
    border-right: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}


                .list .item .pimg {
                    height: 1.4rem;
                    margin-top: .1rem;
                    width: 100%;
                    background-size: 100% !important;
                    background-position: center !important;
                }

        .bt-zx {
            margin-top: .2rem;
            width: 1.34rem;
            height: .5rem;
        }
        /* 大师推荐 */

        .line {
            width: 100%;
            height: 1px;
            background: #f0f0f0;
            position: absolute;
            top: 16px;
        }

        .w_50 {
            width: 50% !important;
        }

        .tk-mark {
            position: fixed;
            height: 100%;
            width: 100%;
            background: rgba(0, 0, 0, 0.3);
            top: 0;
            left: 0;
            z-index: 9999;
        }

            /*说明*/
            .tk-mark .kuang {
                position: absolute;
                height: 5.6rem;
                background: white;
                bottom: 0;
                width: 100%;
            }

            /*购买弹款*/
            .tk-mark .gmkuang {
                padding: 0.34rem 0 0;
                position: absolute;
                /*height: 6rem;*/
                background: white;
                bottom: 0;
                width: 100%;
            }

        .px22 {
            font-size: .22rem;
        }

        .totop {
            position: fixed;
            height: auto;
            z-index: 99999;
            top: 8rem;
            right: 0.4rem;
        }

        .swiper-container {
            width: 5.32rem;
            height: 3.26rem;
        }

        .swiper-button-next, .swiper-container-rtl .swiper-button-prev {
            background-image: url(/source/static/images/jianzhan_0509/right.png);
            right: 0px;
            left: auto;
        }

        .swiper-button-prev, .swiper-container-rtl .swiper-button-next {
            background-image: url(/source/static/images/jianzhan_0509/left.png);
            left: 0px;
            right: auto;
        }

        .lsmd-bg {
            position: relative;
            background: #fafafa;
            margin-top: .3rem;
        }

        .ic_52 {
            width: .52rem;
            height: .52rem;
        }

        .dp-t1 {
            font-size: .28rem;
            color: #999;
        }

        .dpact {
            color: #B32B2B;
        }
    </style>
</head>

<body>
    <header>
        <div class="flex-row college-hd">
            <div class="back"><a href="@(ViewBag.PageUrl)/m_index.html" style="color: #ffffff;">返回首页</a></div>
            <div class="txt px36">收藏阁</div>
            <div class="menu">
                <img src="~/source/static/images/college/menu.png" onclick="moveLeft()" alt="">
            </div>
        </div>
    </header>
    <div class="div-h-8"></div>
    <div class="banner">
        <img src="~/source/static/images/pc/shoucangwap.jpg" alt="" />
    </div>

    <div class="part1" style="border-top:.1rem solid #fff;">
        <div class="flex-row" style="align-items: center;padding:.25rem 0">
            <div class="flex-col"></div>
            <div class="px32 color_57 mar-r-16">镇店推荐</div>
            <img style="height: 0.17rem;width: .17rem" src="~/source/static/images/jianzhan/ic_next.png" alt="" />
            <div class="flex-col"></div>
        </div>
        <div class="list">
        @if (list != null && list.Count > 0)
        {
            foreach (ProductEntity entity in list)
            {
                <div class="item">
                    <div style="margin: 0 .1rem">
                        <div class="t1 color_red_c9">ID:@entity.ProductID</div>
                        <a href="@(ViewBag.PageUrl)/m_@(entity.ProductID).html">
                            <div class="pimg" style="background: url(@entity.Images) no-repeat"></div>
                        </a>
                        <div class="t1 clamp1">【@entity.Author】</div>
                        <div class="t1 clamp1">@entity.ProductName</div>
                        <img class="bt-zx" onclick="javascript:show_zixun('@entity.ProductID','@entity.ProductName')" src="~/source/static/images/jianzhan/btn_ljzx.png">
                    </div>
                </div>
            }
        }
        </div>
        <!-- 分页器 -->
        @{ Html.RenderPartial("../Pager_mm", p); }
        <div class="div-h-8"></div>
    </div>
    @*<div style="text-align: center; padding: .4rem" class="showmore">
        <div class="color_red_c9 px28">展示更多</div>
        <img style="width: 0.21rem;margin-top: 0.1rem" src="~/source/static/images/jianzhan/more.png" alt="">
    </div>*@
    
</body>
</html>
<script src="~/source/static/js/jquery-2.1.4.js"></script>
<script src="~/source/ProductInfo.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        productinfo.init();
    });
</script>