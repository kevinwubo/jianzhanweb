@using Entity.ViewModel;
@{
    ViewBag.Title = "推广统计";
    List<InquiryStatsInfo> list = (List<InquiryStatsInfo>)ViewBag.StatsList;
}

<div class="row-fluid">
    <h2 class="heading" style="margin-top:50px">推广统计</h2>
</div>
<div class="row-fluid">
    <div class="widget widget-padding span12">
        <div class="widget-header">
            <i class="icon-laptop"></i>
            <h5>推广统计</h5>
        </div>
        <div class="widget-body" style="margin-bottom:50px">
            <div id="menus_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div class="row-fluid">
                    <div class="span6">
                        <form action="/Stats/InquiryStats" method="get">
                            <div class="dataTables_length" id="menus_filter">
                                <label>日期: <input type="text" aria-controls="menus" id="datetime" name="datetime" value="@ViewBag.Time"></label>
                                <button class="btn btn-info" type="submit">搜索</button>
                            </div>
                        </form>
                    </div>
                </div>
                @if (list != null && list.Count > 0)
                {
                    <table id="users" class="table table-striped table-bordered dataTable" aria-describedby="users_info">
                        <thead>
                            <tr role="row">
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">日期</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">汇总</th>
                            </tr>
                        </thead>

                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                            @foreach (InquiryStatsInfo item in list)
                            {
                                <tr>
                                    <td class=" sorting_1" style="width:130px;"><b>@item.datetime</b></td>
                                    <td class=" ">@(Html.Raw(item.cityname + ":" + item.info))</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>
</div>
