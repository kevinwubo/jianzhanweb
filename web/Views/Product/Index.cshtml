@using Entity.ViewModel;
@using Common;
@{
    ViewBag.Title = "产品管理";
    List<ProductEntity> list = (List<ProductEntity>)ViewBag.Product;
    //List<BaseDataEntity> codes = ((List<BaseDataEntity>)ViewBag.InquiryCode) ?? new List<BaseDataEntity>();
    PagerInfo p = (PagerInfo)ViewBag.Pager;
}
<div class="row-fluid">
    <h2 class="heading" style="margin-top:20px">产品管理</h2>
</div>
<div class="row-fluid">
    <div class="widget widget-padding span12">
        <div class="widget-header">
            <i class="icon-laptop"></i>
            <h5>产品管理</h5>
            <div class="widget-buttons">
                <a href="/Product/Edit"><i class="icon-laptop"></i> 新增</a>
            </div>
        </div>
        <div class="widget-body" style="margin-bottom:50px">
            <div id="menus_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div class="row-fluid">
                    <div class="span6">
                        <form action="/Inquiry/Index" method="get">
                            <div class="dataTables_length" id="menus_filter">
                                <label>产品编号: <input type="text" placeholder="产品编号" aria-controls="menus" id="name" name="name" value="@ViewBag.ProductID"></label>                               
                                @*<label>
                                    跟踪状态: <select class="span3" style="width:80px" id="tracestate" name="tracestate">
                                <option value="">全部</option>
                                @foreach (var item in codes)
                                {
                                    <option value="@item.ValueInfo" @(ViewBag.ModelCode == item.ValueInfo ? "selected" : "")>@item.ValueInfo</option>
                                }
                            </select>

                                </label>*@
                                <button class="btn btn-info" type="submit">搜索</button>
                            </div>
                        </form>
                    </div>
                </div>
                @if (list != null && list.Count > 0)
                {
                    <table id="users" class="table table-striped table-bordered dataTable" aria-describedby="users_info">
                        <thead>
                            <tr role="row">                                
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">选择</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">产品编号</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:120px">产品名称</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">作者</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:200px">工艺釉色</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">器型</th>                                                             
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">口径</th>  
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">库存数量</th>  
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:180px">成本价</th>  
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">市场价</th>  
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width:80px">最低价</th>  
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width: 100px;">操作</th>
                            </tr>
                        </thead>

                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                            @foreach (ProductEntity entity in list)
                            {

                                <tr>
                                    <td><input type="checkbox" /></td>
                                    <td class=" sorting_1">@entity.ProductID</td>
                                    <td class=" ">@(entity.ProductName)</td>
                                    <td class=" ">@(entity.Author)</td>                                    
                                    <td class=" ">@entity.Type2<td>
                                    <td class=" ">@entity.Type3</td>
                                    <td class=" ">@entity.Type4</td>
                                    <td class=" ">@entity.InventoryCount</td> 
                                    <td class=" ">@entity.CostPrice</td>
                                    <td class=" ">@entity.MarketPrice</td>
                                    <td class=" ">@entity.LowPrice</td>
                                    <td class=" ">                
                                        <a href="/Inquiry/Edit?id=@entity.ID"><i class="icon-edit"></i> 编辑</a>                                 
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                @{ Html.RenderPartial("../Pager", p); }
            </div>
        </div> <!-- /widget-body -->
    </div> <!-- /widget -->
</div>
