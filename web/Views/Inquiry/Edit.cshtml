@using Common
@using Entity.ViewModel;
@{
    ViewBag.Title = "客户咨询更新";
    List<ManagerEntity> plist = (List<ManagerEntity>)ViewBag.PList;
    InquiryEntity entity = (InquiryEntity)ViewBag.inquiry;    
}
@section Header{
<link href="~/source/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
<script src="/source/My97DatePicker/WdatePicker.js" type="text/javascript"></script>
    <style>
        .picRemove {
            height: 15px;
            width: 15px;
            background-color: #e4e5e6;
            position: absolute;
            margin-top: 15px;
            /*filter: alpha(opacity:70);
            opacity: 0.7;
            -moz-opacity: 0.7;
            -khtml-opacity: 0.7;*/
        }
    </style>
}
<div class="row-fluid">
    <form class="form-horizontal" id="StorageForm" action="/Inquiry/Modify" method="post">
        <div class="widget widget-padding span12">
            <div class="widget-header" style="margin-top:30px">
                <i class="icon-list-alt"></i><h5>客户咨询更新</h5>
            </div>
            <div class="widget-body" style="overflow: hidden; display: block;">
                <div class="widget-forms clearfix">
                    <input type="hidden" id="PPId" name="PPId" value="@entity.PPId">
                    <div class="control-group">
                        <label class="control-label">产品名称/编号</label>
                        <div class="controls">
                            <input class="span5" type="text" readonly="readonly" placeholder="产品名称/编号" id="ProductID" name="ProductID" value="@entity.ProductID" maxlength="200">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">询价销售转移</label>
                        <div class="controls">
                            <select tabindex="1" class="span2" id="ProvinceID" name="ProvinceID">
                                @foreach (var item in plist)
                                {
                                    <option value="@item.id" @(entity.OperatorID == item.id.ToString() ? "selected" : "")>@item.real_name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">客户姓名</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="客户姓名" id="CustomerName" name="CustomerName" value="@entity.CustomerName" maxlength="200">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">电话号码</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="电话号码" id="telphone" name="telphone" value="@entity.telphone" maxlength="200">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">电话号码2</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="电话号码2" id="CommentContent" name="CommentContent" value="@entity.CommentContent" maxlength="200">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">QQ/微信号码</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="QQ/微信号码" id="WebChartID" name="WebChartID" value="@entity.WebChartID" maxlength="200">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">留言内容</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="留言内容" id="InquiryContent" name="InquiryContent" value="@entity.InquiryContent" maxlength="200">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">处理状态</label>
                        <div class="controls">
                            <select tabindex="1" class="span2" id="ProcessingState" name="ProcessingState">
                                <option value="1" @(entity.ProcessingState == "1" ? "selected" : "")>已处理</option>
                                <option value="0" @(entity.ProcessingState == "0" ? "selected" : "")>未处理</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">省份/城市</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="省份" id="Provence" name="Provence" value="@entity.Provence" maxlength="10">
                            <input class="span5" type="text" placeholder="城市" id="City" name="City" value="@entity.City" maxlength="10">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">跟踪内容</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="跟踪内容" id="TraceContent" name="TraceContent" value="@entity.TraceContent" maxlength="200">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">跟踪状态</label>
                        <div class="controls">
                            <select tabindex="1" class="span2" id="TraceState" name="TraceState">
                                <option value="有意向" @(entity.ProcessingState == "有意向" ? "selected" : "")>有意向</option>
                                <option value="已成交" @(entity.ProcessingState == "已成交" ? "selected" : "")>已成交</option>
                                <option value="无意向" @(entity.ProcessingState == "无意向" ? "selected" : "")>无意向</option>
                                <option value="假号" @(entity.ProcessingState == "假号" ? "selected" : "")>假号</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">下次回访时间</label>
                        <div class="controls">
                            <input class="span5" type="text" placeholder="跟踪内容" id="NextVisitTime" name="NextVisitTime" value="@entity.NextVisitTime.ToString("yyyy-MM-dd")" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})" maxlength="200">
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget-footer">
                <button class="btn btn-primary" type="button" id="save">保存</button>
                <button class="btn btn-primary" type="button" id="goback">返回</button>
            </div>
        </div>
    </form>
</div>
<div class="window-mask" style="display:none"></div>
<div id="imgContainer" style="z-index:999;display:none">
    <div class="row-fluid" style="margin-top:30px">
        <div class="widget widget-padding span12">
            <div class="widget-header">
                <div class="widget-buttons">
                    <a href="javascript:void(0)" id="closeDeal"><i class="icon-remove"></i>关闭</a>
                </div>
            </div>
            <div class="widget-body" id="imgshow" style="text-align: center;"></div>
        </div>
    </div>
</div>
@section Footer{
<script type="text/javascript" src="~/source/bootstrap-fileinput/js/fileinput.js"></script>
<script type="text/javascript" src="~/source/bootstrap-fileinput/js/fileinput_locale_zh.js"></script>
}
